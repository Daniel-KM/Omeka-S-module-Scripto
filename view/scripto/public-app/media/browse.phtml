<article class="post">
    <header class="post-header">
        <h1 class="post-title"><?php echo $item->displayTitle(); ?></h1>
    </header>
    <div class="post-content">
        <div class="resource-content">
            <?php if ($itemMetadata = $item->displayValues()): ?>
