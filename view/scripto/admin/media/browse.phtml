<script>
var batchForm = $('#batch-form');
var batchSelects = batchForm.find('select.batch-review-select, select.batch-manage-select');
var batchSelectedOptions = batchSelects.find('option[value$="-selected"]');

batchForm.on('change', ':checkbox', function(e) {
    if (batchForm.find(':checkbox:checked').length > 0) {
        // at least one checkbox is checked
        batchSelectedOptions.prop('disabled', false);
    } else {
        // no checkboxes are checked
        batchSelects.val('default');
        batchSelectedOptions.prop('disabled', true);
        batchForm.find('input.batch-submit').hide();
        batchForm.find('button.default').show();
    }
});

batchSelects.on('change', function(e) {
    var thisSelect = $(this);
    var batchActionsDiv = thisSelect.closest('.batch-actions');
    var defaultButton = batchActionsDiv.find('button.default');
    var submitButton = batchActionsDiv.find('input.batch-submit');
    if ('default' === thisSelect.find(':selected').val()) {
        defaultButton.show();
        submitButton.hide();
    } else {
        defaultButton.hide();
        submitButton.show();
    }
});
</script>
